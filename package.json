{
    "name": "bpsr-meter",
    "version": "0.4.4",
    "description": "BPSR Meter",
    "author": "Denoder",
    "type": "module",
    "main": "out/main/index.js",
    "bin": {
        "bpsr-meter": "dist/server/server.js"
    },
    "engines": {
        "node": "^22.20.0"
    },
    "scripts": {
        "dev": "electron-vite dev",
        "dev:windows": "chcp 65001 > nul && electron-vite dev",
        "build": "electron-vite build",
        "build:server": "tsc src/main/server.ts --outDir dist/server --module ES2022 --target ES2020 --moduleResolution bundler --esModuleInterop --resolveJsonModule --skipLibCheck",
        "build:all": "npm run build && npm run build:server",
        "lint:prettier": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
        "test": "echo \"Error: no test specified\" && exit 1",
        "dist": "npm run build:all && electron-builder --win --x64",
        "sync:proto": "node scripts/sync-proto.js",
        "postinstall": "patch-package"
    },
    "keywords": [],
    "license": "AGPL-3.0",
    "dependencies": {
        "@bufbuild/protobuf": "^2.10.0",
        "@electron-toolkit/preload": "^3.0.2",
        "@electron-toolkit/utils": "^4.0.0",
        "@tailwindcss/vite": "^4.1.15",
        "@woheedev/bptimer-api-client": "^0.0.8",
        "adm-zip": "^0.5.16",
        "bindings": "^1.5.0",
        "cap": "^0.2.1",
        "cors": "^2.8.5",
        "electron-updater": "^6.6.2",
        "express": "^5.1.0",
        "google-protobuf": "^4.0.0",
        "is-admin": "^4.0.0",
        "long": "^5.3.2",
        "protobufjs": "^7.5.4",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "rollup-plugin-copy": "^3.5.0",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "tailwindcss": "^4.1.15"
    },
    "devDependencies": {
        "@bufbuild/buf": "^1.59.0",
        "@bufbuild/protoc-gen-es": "^2.10.0",
        "@protobuf-ts/plugin": "^2.11.1",
        "@types/adm-zip": "^0.5.7",
        "@types/bindings": "^1.5.5",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/google-protobuf": "^3.15.12",
        "@types/node": "^22.18.11",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vitejs/plugin-react": "^5.0.4",
        "@yao-pkg/pkg": "^6.6.0",
        "babel-plugin-react-compiler": "^1.0.0",
        "chokidar": "^4.0.1",
        "concurrently": "^9.1.2",
        "electron": "^39.0.0",
        "electron-builder": "^26.0.12",
        "electron-vite": "^4.0.1",
        "patch-package": "^8.0.1",
        "prettier": "^3.6.2",
        "protobufjs-cli": "^1.1.3",
        "ts-proto": "^2.8.3",
        "typescript": "^5.9.3",
        "vite": "^7.1.11"
    },
    "pkg": {
        "scripts": "server.js",
        "assets": [
            "translations/**/*",
            "settings.json",
            "users.json",
            "node_modules/cap/**/*"
        ],
        "targets": [
            "node22-win-x64"
        ],
        "outputPath": "dist"
    },
    "build": {
        "appId": "com.bpsr.meter",
        "productName": "BPSR Meter",
        "asar": true,
        "asarUnpack": [
            "**/*.node",
            "**/*.dll",
            "**/*.sys"
        ],
        "compression": "maximum",
        "publish": {
            "provider": "github",
            "owner": "Denoder",
            "repo": "BPSR-Meter"
        },
        "files": [
            "out/**/*",
            "proto/**/*",
            "translations/**/*",
            "settings.json",
            "users.json",
            "icon.ico",
            "icon.png",
            "!**/*.map",
            "!**/*.d.ts",
            "!**/README.md",
            "!**/LICENSE"
        ],
        "extraResources": [
            {
                "from": "node_modules/cap/",
                "to": "cap/",
                "filter": [
                    "**/*.node",
                    "**/*.dll",
                    "**/*.sys",
                    "!**/build/",
                    "!**/deps/",
                    "!**/test/"
                ]
            }
        ],
        "linux": {
            "icon": "icon.png",
            "target": [
                "AppImage"
            ],
            "category": "Utility"
        },
        "win": {
            "icon": "icon.ico",
            "target": [
                "nsis"
            ],
            "extraResources": [
                {
                    "from": "build/",
                    "to": "build/",
                    "filter": [
                        "**/*"
                    ]
                }
            ]
        },
        "nsis": {
            "deleteAppDataOnUninstall": true,
            "oneClick": false
        },
        "directories": {
            "output": "dist_electron"
        }
    }
}
